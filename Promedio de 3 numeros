//Promedio de 3 numeros
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	float p,a,b,c;
	cout<<"Ingrese el valor de a: ";
	cin>>a;
	cout<<"Ingrese el valor de b: ";
	cin>>b;
	cout<<"Ingrese el valor de c: ";
	cin>>c;
	p=(a+b+c)/3;
	cout<<"El promedio es: "<<p;
	getch();
}
